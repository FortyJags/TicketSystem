<Window x:Class="TicketSystem.ChangeName"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TicketSystem"
        mc:Ignorable="d"
        Title="ChangeName" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="NewName" Height="100" Width="200" Background="LightGray"/>
        <Button x:Name="BUTTON" Content="CLICK" Click="BUTTON_Click" Height="50" Width="60" VerticalAlignment="Bottom"/>
    </Grid>
</Window>
